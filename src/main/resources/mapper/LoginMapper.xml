<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.example.demo.mapper.LoginMapper">
    <resultMap id="customer" type="cn.example.demo.dao.Customer" >
        <id column="id" property="id" />
        <result column="account" property="account" />
        <result column="password" property="password" />
    </resultMap>
    <sql id="info">
       SELECT id, account, nickname, password, sex, phone, address, email, time
    </sql>
    <select id="result" resultMap="customer">
        <include refid="info"/>
        FROM login
        WHERE account = ${login.account} AND password=${login.password}
    </select>
    <select id="check" resultMap="customer">
        <include refid="info"/>
        FROM login
        WHERE account = #{account} OR phone = #{account} OR email = #{account}
    </select>
    <update id="reset">
        UPDATE login
        <set>
            <if test="customer.password != null and customer.password != ''">
                password = #{customer.password}
            </if>
        </set>
        WHERE account = #{customer.account}
    </update>
</mapper>
